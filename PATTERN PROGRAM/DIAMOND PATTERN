public class Pattern{
public static void main(String[]args){
for(int i=1;i<=7;i++){
if(i<=4){
for(int j=1;j<=4-i;j++){
System.out.print(" ");
}}
else{
for(int j=1;j<=i-4;j++){
System.out.print(" ");
}}

if(i<=4){
for(int j=1;j<=i;j++){
System.out.print("*"+" ");
}}
else{
for(int j=1;j<=7-i+1;j++){
System.out.print("*"+" ");
}}
System.out.println();
}}}
